{
	"compilerOptions": {
		"target"                 : "ESNext",
		"useDefineForClassFields": true,
		"module"                 : "ESNext",
		"moduleResolution"       : "Node",
		"strict"                 : true,
		"jsx"                    : "preserve",
		"resolveJsonModule"      : true,
		"isolatedModules"        : true,
		"esModuleInterop"        : true,
		"declaration"            : true,
		"newLine"                : "lf",
		"declarationDir"         : "dist",
		"outDir"                 : "dist",
		"lib"                    : [
			"ESNext",
			"DOM",
			"dom.iterable",
			"scripthost"
		],
		"skipLibCheck"           : true,
		"noEmit"                 : true,
		"baseUrl"                : ".",
		"paths"                  : {
			"@/*": [
				"src/*"
			]
		},
		"types": [
			"node",
			"vue"
		]
	},
	"include"        : [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"references"     : [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
