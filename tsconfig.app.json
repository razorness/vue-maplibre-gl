{
	"extends"        : "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		"baseUrl"                     : ".",
		"tsBuildInfoFile"             : "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		/* Linting */
		"strict"                      : true,
		"noUnusedLocals"              : true,
		"noUnusedParameters"          : true,
		"noFallthroughCasesInSwitch"  : true,
		"noUncheckedSideEffectImports": true,
		"paths"                       : {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include"        : [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"dev/**/*.ts",
		"dev/**/*.tsx",
		"dev/**/*.vue"
	]
}
